<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".all_fragments.Services.AndroidServices">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>
        <Button
            android:id="@+id/startBG"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Start Background"
            android:textColor="@color/black"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="center"></Button>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>
        <Button
            android:id="@+id/stopBG"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Stop Background"
            android:textColor="@color/black"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="center"></Button>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>
        <Button
            android:id="@+id/startFG"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Start Foreground"
            android:textColor="@color/black"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="center"></Button>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>